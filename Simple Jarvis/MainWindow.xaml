<Window x:Class="SomebodyNeedsMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SomebodyNeedsMe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="840">
	<Grid>

		<DataGrid SelectionChanged="CallsAndResponses_SelectionChanged" Name="CallsAndResponses"
				  HorizontalAlignment="Left" Height="360" Margin="10,51,0,0" 
				  VerticalAlignment="Top" Width="800"  ColumnWidth="400"
				  AutoGenerateColumns="True" Loaded="CallsAndResponses_Loaded">
		</DataGrid>
		<Label Content="Jarvis 0.0.0.1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Button Content="Save and Reload" HorizontalAlignment="Left" Margin="696,22,0,0" VerticalAlignment="Top" Width="114" Name="SaveButton" Click="SaveButton_Click"/>

	</Grid>
</Window>
